#!/usr/bin/python3
# Author Stephen Kennedy

import os

myPython = "myPython.d"
cwd = os.getcwd()

scripts = ['https://raw.githubusercontent.com/Medicup/fetch_update.py/master/update.py',
  'https://raw.githubusercontent.com/Medicup/ipv6_disable_debian/master/disable_ipv6.py',
  'https://raw.githubusercontent.com/Medicup/ubuntu_init_setup/master/initSetup.py']

def mypython_setup():
  if os.path.isdir('./myPython.d'):
    return
  else:
    os.system('mkdir %s ' % (myPython))

def get_scripts():
  for script in scripts:
    os.system("curl -O %s " % (script))
  os.system('chmod 775 *.py')
  os.system("mv *.py %s/%s" % (cwd, myPython))

mypython_setup()
get_scripts()
